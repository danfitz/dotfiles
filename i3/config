# Caps lock = escape
exec_always xmodmap -e "clear lock" #disable caps lock switch
exec_always xmodmap -e "keysym Caps_Lock = Escape" #set caps_lock as escape

# Add mouse control using keyboard
mode "mouse" {
    # mouse keybindings
    bindsym $mod+h exec xdotool mousemove_relative -- -35 0 # left
    bindsym $mod+j exec xdotool mousemove_relative 0 35 # down
    bindsym $mod+k exec xdotool mousemove_relative -- 0 -35 # up
    bindsym $mod+l exec xdotool mousemove_relative 35 0 # right
    bindsym $mod+u exec xdotool click 1 # left click
    bindsym $mod+i exec xdotool click 3 # right click

    # more minute mouse keybindings
    bindsym $mod+Shift+h exec xdotool mousemove_relative -- -15 0 # left
    bindsym $mod+Shift+j exec xdotool mousemove_relative 0 15 # down
    bindsym $mod+Shift+k exec xdotool mousemove_relative -- 0 -15 # up
    bindsym $mod+Shift+l exec xdotool mousemove_relative 15 0 # right

    # back to normal: Enter or Escape or $mod+r
    bindsym $mod+m mode "default"
}

bindsym $mod+m mode "mouse"


